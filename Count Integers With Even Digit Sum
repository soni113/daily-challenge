class Solution {
    public int countEven(int num) {
        int ans = num;
        int sum=0;
        while(num>0){
            int r = num%10;
            sum+=r;
            num=num/10;
                
        }
        if(sum%2==1 && ans%2==0)
            return (ans/2)-1;
        else
            return ans/2;
        
        
    }
}
